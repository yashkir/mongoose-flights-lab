<%- include('../partials/header') %>

<h1><%= title %></h1>

<form action="/flights" method="post">
  <label for="">Airline:
    <select name="airline" required>
      <option value="American">American</option>
      <option value="Southwest">Southwest</option>
      <option value="United">United</option>
    </select>
  </label>
  <br>
  <label for="">Airport:
    <select name="airport" required>
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN" selected>DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
  </label>
  <br>
  <label for="">Flight Number:
    <input type="number" name="flightNo" min="10" max="9999" required/>
  </label>
  <br>
  <label for="">Departure:
    <input type="datetime-local" name="departs" value="<%= defaultDeparts %>" required/>
  </label>
  <br>
  <button type="submit">Add Flight</button>
</form>

<% if (typeof message !== 'undefined') { %>
  <%- `<div class='error'>${message}</div>`; %>
<% } %>

<%- include('../partials/footer') %>
